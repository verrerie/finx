# ============================================================================
# FinX Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================================================
# Market Data APIs
# ============================================================================

# Alpha Vantage API Key (Primary data source)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
# Free tier: 25 requests/day, 5 requests/minute
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ============================================================================
# Database Configuration (MariaDB)
# ============================================================================

# Database credentials
DB_HOST=localhost
DB_PORT=3306
DB_NAME=finx
DB_USER=finx_user
DB_PASSWORD=finx_password
DB_ROOT_PASSWORD=finx_root_password

# Database connection pool settings (optional)
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ============================================================================
# Application Configuration
# ============================================================================

# Node environment
NODE_ENV=development

# Application port (if running web server)
PORT=3000

# ============================================================================
# Cache Configuration
# ============================================================================

# Cache TTL in seconds
CACHE_TTL_QUOTE=60
CACHE_TTL_COMPANY_INFO=3600
CACHE_TTL_HISTORICAL=3600
CACHE_TTL_SEARCH=86400

# ============================================================================
# Rate Limiting
# ============================================================================

# Alpha Vantage rate limits (free tier)
RATE_LIMIT_MAX_CALLS=5
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Logging
# ============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ============================================================================
# Development Settings
# ============================================================================

# Enable/disable seed data on database initialization
LOAD_SEED_DATA=true

# Enable/disable SQL query logging
LOG_SQL_QUERIES=false

